
@{
    ViewBag.Title = "Index";
}
<html>
<body>
    <!-- Hero Section -->
    <div class="relative pt-16 pb-32 flex content-center items-center justify-center" style="min-height: 95vh;">
        <div class="absolute top-0 w-full h-full bg-center bg-cover" style='background-image: url("https://images.unsplash.com/photo-1521791136064-7986c2920216?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80");'>
            <span class="w-full h-full absolute opacity-50 bg-black"></span>
        </div>
        <div class="container relative mx-auto">
            <div class="items-center flex flex-wrap">
                <div class="w-full lg:w-6/12 px-4 ml-auto mr-auto text-center">
                    <div class="pr-12">
                        <h1 class="text-white font-semibold text-5xl">
                            Your Career Journey Starts Here
                        </h1>
                        <p class="mt-4 text-lg text-gray-300">
                            Find your dream job from over 100,000 opportunities worldwide
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="top-auto bottom-0 left-0 right-0 w-full absolute pointer-events-none overflow-hidden" style="height: 70px;">
            <svg class="absolute bottom-0 overflow-hidden" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none" version="1.1" viewBox="0 0 2560 100" x="0" y="0">
                <polygon class="text-gray-50 fill-current" points="2560 0 2560 100 0 100"></polygon>
            </svg>
        </div>
    </div>

    <!-- Search Section -->
    <div class="container mx-auto px-4 -mt-32 relative z-10">
        <div class="bg-white rounded-lg shadow-lg p-6">
            <form class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div>
                    <input type="text" placeholder="Job title or keyword" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500">
                </div>
                <div>
                    <input type="text" placeholder="Location" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500">
                </div>
                <div>
                    <select class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500">
                        <option value="">Select Category</option>
                        <option value="tech">Technology</option>
                        <option value="finance">Finance</option>
                        <option value="healthcare">Healthcare</option>
                    </select>
                </div>
                <div>
                    <button class="w-full bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition duration-300">
                        Search Jobs
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Featured Jobs Section -->
    <section class="py-20">
        <div class="container mx-auto px-4">
            <div class="flex flex-wrap justify-center text-center mb-12">
                <div class="w-full lg:w-6/12 px-4">
                    <h2 class="text-4xl font-semibold">Featured Jobs</h2>
                    <p class="text-lg leading-relaxed m-4 text-gray-600">
                        Discover opportunities from leading companies
                    </p>
                </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <!-- Job Card 1 -->
                <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition duration-300">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-xl font-semibold text-gray-800">Senior Software Engineer</h3>
                        <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded">Full-time</span>
                    </div>
                    <p class="text-gray-600 mb-4">Google • New York, NY</p>
                    <p class="text-gray-500 mb-4">Join our team and work on cutting-edge technology projects...</p>
                    <div class="flex justify-between items-center">
                        <span class="text-gray-700 font-medium">$120K - $180K</span>
                        <button class="text-blue-600 hover:text-blue-800">Apply Now →</button>
                    </div>
                </div>
                <!-- Job Card 2 -->
                <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition duration-300">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-xl font-semibold text-gray-800">Product Manager</h3>
                        <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded">Remote</span>
                    </div>
                    <p class="text-gray-600 mb-4">Amazon • Seattle, WA</p>
                    <p class="text-gray-500 mb-4">Lead product development and strategy for innovative solutions...</p>
                    <div class="flex justify-between items-center">
                        <span class="text-gray-700 font-medium">$140K - $200K</span>
                        <button class="text-blue-600 hover:text-blue-800">Apply Now →</button>
                    </div>
                </div>
                <!-- Job Card 3 -->
                <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition duration-300">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-xl font-semibold text-gray-800">Data Scientist</h3>
                        <span class="bg-purple-100 text-purple-800 text-xs font-medium px-2.5 py-0.5 rounded">Contract</span>
                    </div>
                    <p class="text-gray-600 mb-4">Microsoft • San Francisco, CA</p>
                    <p class="text-gray-500 mb-4">Analyze large datasets and build predictive models...</p>
                    <div class="flex justify-between items-center">
                        <span class="text-gray-700 font-medium">$100K - $150K</span>
                        <button class="text-blue-600 hover:text-blue-800">Apply Now →</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section class="py-20 bg-gray-100">
        <div class="container mx-auto px-4">
            <div class="flex flex-wrap justify-center text-center mb-12">
                <div class="w-full lg:w-6/12 px-4">
                    <h2 class="text-4xl font-semibold">What Our Users Say</h2>
                    <p class="text-lg leading-relaxed m-4 text-gray-600">
                        Hear from professionals who found their dream jobs through CareerHub
                    </p>
                </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <!-- Testimonial 1 -->
                <div class="bg-white rounded-lg shadow-lg p-6">
                    <p class="text-gray-600 mb-4">"CareerHub helped me find my dream job in just a few weeks. The platform is easy to use, and the support team is amazing!"</p>
                    <div class="flex items-center">
                        <img src="https://randomuser.me/api/portraits/women/44.jpg" alt="User" class="w-12 h-12 rounded-full mr-4">
                        <div>
                            <h4 class="text-lg font-semibold">Jane Doe</h4>
                            <p class="text-gray-500">Software Engineer at Google</p>
                        </div>
                    </div>
                </div>
                <!-- Testimonial 2 -->
                <div class="bg-white rounded-lg shadow-lg p-6">
                    <p class="text-gray-600 mb-4">"I was able to connect with top companies and land a remote job that fits my lifestyle. Highly recommend CareerHub!"</p>
                    <div class="flex items-center">
                        <img src="https://randomuser.me/api/portraits/men/32.jpg" alt="User" class="w-12 h-12 rounded-full mr-4">
                        <div>
                            <h4 class="text-lg font-semibold">John Smith</h4>
                            <p class="text-gray-500">Product Manager at Amazon</p>
                        </div>
                    </div>
                </div>
                <!-- Testimonial 3 -->
                <div class="bg-white rounded-lg shadow-lg p-6">
                    <p class="text-gray-600 mb-4">"The job search process was seamless, and I found multiple opportunities that matched my skills. Thank you, CareerHub!"</p>
                    <div class="flex items-center">
                        <img src="https://randomuser.me/api/portraits/women/68.jpg" alt="User" class="w-12 h-12 rounded-full mr-4">
                        <div>
                            <h4 class="text-lg font-semibold">Emily Johnson</h4>
                            <p class="text-gray-500">Data Scientist at Microsoft</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-12">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div>
                    <h3 class="text-xl font-semibold mb-4">CareerHub</h3>
                    <p class="text-gray-400">Your gateway to finding the perfect job and advancing your career.</p>
                </div>
                <div>
                    <h3 class="text-xl font-semibold mb-4">Quick Links</h3>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-400 hover:text-white">Home</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white">Find Jobs</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white">Companies</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white">Resources</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-xl font-semibold mb-4">Contact Us</h3>
                    <p class="text-gray-400">Email: <a href="mailto:support@careerhub.com" class="hover:text-white">support@careerhub.com</a></p>
                    <p class="text-gray-400">Phone: +1 (123) 456-7890</p>
                </div>
                <div>
                    <h3 class="text-xl font-semibold mb-4">Follow Us</h3>
                    <div class="flex space-x-4">
                        <a href="#" class="text-gray-400 hover:text-white">Facebook</a>
                        <a href="#" class="text-gray-400 hover:text-white">Twitter</a>
                        <a href="#" class="text-gray-400 hover:text-white">LinkedIn</a>
                    </div>
                </div>
            </div>
            <div class="border-t border-gray-700 mt-8 pt-8 text-center">
                <p class="text-gray-400">&copy; 2025 CareerHub. All rights reserved.</p>
            </div>
        </div>
    </footer>
    
</body>

</html>

