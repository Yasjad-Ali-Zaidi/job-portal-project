
@{
    ViewBag.Title = "Index";
}


<body class="bg-gray-50">
    <!-- Search Header -->
    <div class="pt-24 pb-6 bg-blue-600">
        <div class="container mx-auto px-4">
            <div class="max-w-5xl mx-auto">
                <form class="flex flex-wrap gap-4">
                    <div class="flex-1">
                        <input type="text" placeholder="Job title or keyword" class="w-full px-4 py-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div class="flex-1">
                        <input type="text" placeholder="Location" class="w-full px-4 py-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                    <button type="submit" class="px-8 py-3 bg-blue-800 text-white font-medium rounded-lg hover:bg-blue-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200">
                        Search
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="container mx-auto px-4 py-8">
        <div class="flex flex-wrap -mx-4">
            <!-- Filters Sidebar -->
            <div class="w-full md:w-1/4 px-4">
                <div class="bg-white rounded-lg shadow-lg p-6 sticky top-24">
                    <h2 class="text-lg font-semibold text-gray-800 mb-4">Filters</h2>

                    <!-- Job Type Filter -->
                    <div class="mb-6">
                        <h3 class="text-sm font-medium text-gray-700 mb-3">Job Type</h3>
                        <div class="space-y-2">
                            <label class="flex items-center">
                                <input type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                                <span class="ml-2 text-sm text-gray-600">Full Time</span>
                            </label>
                            <label class="flex items-center">
                                <input type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                                <span class="ml-2 text-sm text-gray-600">Part Time</span>
                            </label>
                            <label class="flex items-center">
                                <input type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                                <span class="ml-2 text-sm text-gray-600">Contract</span>
                            </label>
                        </div>
                    </div>

                    <!-- Location Filter -->
                    <div class="mb-6">
                        <h3 class="text-sm font-medium text-gray-700 mb-3">Location</h3>
                        <div class="space-y-2">
                            <label class="flex items-center">
                                <input type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                                <span class="ml-2 text-sm text-gray-600">New York</span>
                            </label>
                            <label class="flex items-center">
                                <input type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                                <span class="ml-2 text-sm text-gray-600">San Francisco</span>
                            </label>
                            <label class="flex items-center">
                                <input type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                                <span class="ml-2 text-sm text-gray-600">Remote</span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Job Listings -->
            <div class="w-full md:w-3/4 px-4">
                <div class="bg-white rounded-lg shadow-lg p-6">
                    <h2 class="text-2xl font-semibold text-gray-800 mb-6">Job Listings</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Dummy Job 1 -->
                        <div class="bg-white rounded-lg shadow-md p-6">
                            <h3 class="text-xl font-semibold text-gray-800 mb-2">Software Engineer</h3>
                            <p class="text-gray-600 mb-4">TechCorp - San Francisco, CA</p>
                            <p class="text-gray-700">We are looking for a skilled Software Engineer to join our team. You will be responsible for developing and maintaining our software applications.</p>
                            <button class="mt-4 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200">Apply Now</button>
                        </div>

                        <!-- Dummy Job 2 -->
                        <div class="bg-white rounded-lg shadow-md p-6">
                            <h3 class="text-xl font-semibold text-gray-800 mb-2">Product Manager</h3>
                            <p class="text-gray-600 mb-4">Innovate Inc. - New York, NY</p>
                            <p class="text-gray-700">We are seeking a Product Manager to lead the development of our new product line. You will work closely with our engineering and design teams.</p>
                            <button class="mt-4 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200">Apply Now</button>
                        </div>

                        <!-- Dummy Job 3 -->
                        <div class="bg-white rounded-lg shadow-md p-6">
                            <h3 class="text-xl font-semibold text-gray-800 mb-2">Data Scientist</h3>
                            <p class="text-gray-600 mb-4">DataDrive Ltd. - Remote</p>
                            <p class="text-gray-700">Join our team as a Data Scientist and help us analyze and interpret complex data. You will work on various projects and collaborate with different departments.</p>
                            <button class="mt-4 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200">Apply Now</button>
                        </div>

                        <!-- Dummy Job 4 -->
                        <div class="bg-white rounded-lg shadow-md p-6">
                            <h3 class="text-xl font-semibold text-gray-800 mb-2">UX Designer</h3>
                            <p class="text-gray-600 mb-4">Creative Co. - Los Angeles, CA</p>
                            <p class="text-gray-700">We are looking for a talented UX Designer to create intuitive and user-friendly interfaces. You will work on various projects and collaborate with our development team.</p>
                            <button class="mt-4 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200">Apply Now</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.js"></script>
</body>


