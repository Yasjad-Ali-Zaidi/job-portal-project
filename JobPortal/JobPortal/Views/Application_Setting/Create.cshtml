@model DataBaseLayer.Application_Setting

@{
    ViewBag.Title = "Create";
}

<!-- Page Header -->
<div class="pt-24 pb-12 bg-blue-600">
    <div class="container mx-auto px-4">
        <div class="flex flex-wrap justify-center text-center">
            <div class="w-full lg:w-6/12 px-4">
                <h1 class="text-4xl font-semibold text-white">Application Settings</h1>
                <p class="mt-4 text-lg text-blue-100">
                    Configure your application preferences
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Form Container -->
<div class="container mx-auto px-4 py-12">
    <div class="max-w-3xl mx-auto bg-white rounded-lg shadow-lg p-8">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <!-- Form Title -->
            <h2 class="text-2xl font-semibold text-gray-800 mb-6">Application Settings</h2>

            @Html.ValidationSummary(true, "", new { @class = "text-red-500 mb-4" })

            <!-- Application Deadline -->
            <div class="mb-6">
                @Html.LabelFor(m => m.ApplicationDeadline, new { @class = "block text-sm font-medium text-gray-700 mb-2" })
                <div>
                    @Html.EditorFor(m => m.ApplicationDeadline,
                        new
                        {
                            htmlAttributes = new
                            {
                                @class = "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500",
                                @type = "date",
                            }
                        })
                    @Html.ValidationMessageFor(m => m.ApplicationDeadline, "", new { @class = "text-red-500 text-sm mt-1" })
                </div>
            </div>

            <!-- Application Email -->
            <div class="mb-6">
                @Html.LabelFor(m => m.ApplicationEmail, new { @class = "block text-sm font-medium text-gray-700 mb-2" })
                <div>
                    @Html.EditorFor(m => m.ApplicationEmail,
                        new
                        {
                            htmlAttributes = new
                            {
                                @class = "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500",
                                @type = "email",
                                required = "required"
                            }
                        })
                    @Html.ValidationMessageFor(m => m.ApplicationEmail, "", new { @class = "text-red-500 text-sm mt-1" })
                </div>
            </div>

            <!-- Receive by Email Checkbox -->
            <div class="mb-6">
                <div class="flex items-center">
                    @Html.EditorFor(m => m.ReceiveByEmail, new { htmlAttributes = new { @class = "h-4 w-4 border-gray-300 rounded" } })
                    <label class="ml-2 text-sm text-gray-700">
                        Receive applications by email
                    </label>
                </div>
                @Html.ValidationMessageFor(m => m.ReceiveByEmail, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <!-- Submit Button -->
            <div class="flex justify-end pt-6">
                <button type="submit" class="px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200">
                    Save Settings
                </button>
            </div>
        }

        <!-- Back to List Link -->
        <div class="mt-4 text-center">
            @Html.ActionLink("Back to List", "Index", null, new { @class = "text-blue-600 hover:text-blue-800" })
        </div>
    </div>
</div>
