@model DataBaseLayer.Company_Information

@{
    ViewBag.Title = "Edit";
}

<!-- Page Header -->
<div class="pt-24 pb-12 bg-blue-600">
    <div class="container mx-auto px-4">
        <div class="flex flex-wrap justify-center text-center">
            <div class="w-full lg:w-6/12 px-4">
                <h1 class="text-4xl font-semibold text-white">Edit Company Information</h1>
                <p class="mt-4 text-lg text-blue-100">
                    Update company details to ensure accurate information.
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Edit Form -->
<div class="container mx-auto px-4 py-12">
    <div class="max-w-3xl mx-auto bg-white rounded-lg shadow-lg p-8">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <h2 class="text-2xl font-semibold text-gray-800 mb-6">Company Details</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-red-500 mb-4" })
            @Html.HiddenFor(model => model.CompanyID)

            <!-- Company Name -->
            <div class="mb-6">
                @Html.LabelFor(m => m.CompanyName, new { @class = "block text-sm font-medium text-gray-700 mb-2" })
                <input type="text" value="@Model.CompanyName" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                @Html.ValidationMessageFor(m => m.CompanyName, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <!-- Company Website -->
            <div class="mb-6">
                @Html.LabelFor(m => m.CompanyWebsite, new { @class = "block text-sm font-medium text-gray-700 mb-2" })
                <input type="url" value="@Model.CompanyWebsite" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                @Html.ValidationMessageFor(m => m.CompanyWebsite, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <!-- Company Logo -->
            <div class="mb-6">
                @Html.LabelFor(m => m.CompanyLogo, new { @class = "block text-sm font-medium text-gray-700 mb-2" })
                <div class="flex items-center space-x-4">
                    <img src="@Model.CompanyLogo" alt="Company Logo" class="h-16 w-16 rounded-lg object-cover">
                    <input type="file" class="px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                @Html.ValidationMessageFor(m => m.CompanyLogo, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <!-- Submit Button -->
            <div class="flex justify-between mt-6">
                <button type="submit" class="px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200">
                    Save Changes
                </button>
                @Html.ActionLink("Cancel", "Index", null, new { @class = "text-blue-600 hover:text-blue-800 text-lg font-medium" })
            </div>
        }
    </div>
</div>
