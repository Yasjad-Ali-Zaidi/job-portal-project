@model DataBaseLayer.Company_Information

@{
    ViewBag.Title = Model != null && !string.IsNullOrEmpty(Model.CompanyName) ? "Details - " + Model.CompanyName : "Company Details";
}

<!-- Page Header -->
<div class="pt-24 pb-12 bg-blue-600">
    <div class="container mx-auto px-4">
        <div class="flex flex-wrap justify-center text-center">
            <div class="w-full lg:w-6/12 px-4">
                <h1 class="text-4xl font-semibold text-white">@ViewBag.Title</h1>
                <p class="mt-4 text-lg text-blue-100">
                    Detailed information about the company and job position
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Company & Job Details -->
<div class="container mx-auto px-4 py-12">
    <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-lg p-8">

        @if (Model != null)
        {
            <!-- Company Information -->
            <div class="space-y-6 pb-6 border-b border-gray-200">
                <h2 class="text-2xl font-semibold text-gray-800">Company Information</h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Company Name</label>
                        <p class="text-gray-900">@Html.DisplayFor(model => model.CompanyName)</p>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700">Company Website</label>
                        <p>
                            @if (!string.IsNullOrEmpty(Model.CompanyWebsite))
                            {
                                <a href="@Model.CompanyWebsite" target="_blank" class="text-blue-500 hover:underline">@Model.CompanyWebsite</a>
                            }
                            else
                            {
                                <span class="text-gray-500">N/A</span>
                            }
                        </p>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700">Company Logo</label>
                    <div class="mt-2">
                        @if (!string.IsNullOrEmpty(Model.CompanyLogo))
                        {
                            <img src="@Url.Content(Model.CompanyLogo)" alt="Company Logo" class="w-32 h-32 rounded-lg border">
                        }
                        else
                        {
                            <p class="text-gray-500">No logo available</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Job Details -->
            @if (Model.Job_Details != null)
            {
                <div class="mt-8">
                    <h2 class="text-2xl font-semibold text-gray-800">Job Details</h2>
                    <hr class="mb-4" />

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Job Title</label>
                            <p class="text-gray-900">@Html.DisplayFor(model => model.Job_Details.JobTitle)</p>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700">Job Category</label>
                            <p class="text-gray-900">@Html.DisplayFor(model => model.Job_Details.JobCategory)</p>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700">Work Type</label>
                            <p class="text-gray-900">@Html.DisplayFor(model => model.Job_Details.Worktype)</p>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700">Location</label>
                            <p class="text-gray-900">@Html.DisplayFor(model => model.Job_Details.Location)</p>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700">Salary Range</label>
                            <p class="text-gray-900">
                                @if (Model.Job_Details.SalaryMin.HasValue && Model.Job_Details.SalaryMax.HasValue)
                                {
                                    @($"{Model.Job_Details.SalaryMin.Value:C} - {Model.Job_Details.SalaryMax.Value:C}")
                                }
                                else
                                {
                                    <span class="text-gray-500">N/A</span>
                                }
                            </p>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700">Experience Level</label>
                            <p class="text-gray-900">@Html.DisplayFor(model => model.Job_Details.ExperienceLevel)</p>
                        </div>

                        <div class="col-span-2">
                            <label class="block text-sm font-medium text-gray-700">Job Description</label>
                            <p class="text-gray-900">@Html.DisplayFor(model => model.Job_Details.JobDescription)</p>
                        </div>

                        <div class="col-span-2">
                            <label class="block text-sm font-medium text-gray-700">Requirements</label>
                            <p class="text-gray-900">@Html.DisplayFor(model => model.Job_Details.Requirements)</p>
                        </div>

                        <div class="col-span-2">
                            <label class="block text-sm font-medium text-gray-700">Benefits</label>
                            <p class="text-gray-900">@Html.DisplayFor(model => model.Job_Details.Benefits)</p>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <p class="text-red-500 mt-4">No job details available.</p>
            }

            <!-- Action Buttons -->
            <div class="flex justify-end pt-6">
                @Html.ActionLink("Edit", "Edit", new { id = Model.CompanyID }, new { @class = "px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200" })
                @Html.ActionLink("Back to List", "Index", null, new { @class = "ml-4 px-6 py-3 bg-gray-500 text-white font-medium rounded-lg hover:bg-gray-600 transition-colors duration-200" })
            </div>
        }
        else
        {
            <p class="text-danger">Error: No company information found.</p>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        }
    </div>
</div>
