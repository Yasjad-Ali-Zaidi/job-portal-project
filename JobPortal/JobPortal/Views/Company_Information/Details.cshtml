@model DataBaseLayer.Company_Information

@{
    ViewBag.Title = "Details - " + Model.CompanyName; // Dynamic title
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>Company Information</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.CompanyName)</dt>
        <dd>@Html.DisplayFor(model => model.CompanyName)</dd>

        <dt>@Html.DisplayNameFor(model => model.CompanyWebsite)</dt>
        <dd>
            <a href="@Model.CompanyWebsite" target="_blank">@Model.CompanyWebsite</a> <!-- Clickable website -->
        </dd>

        <dt>@Html.DisplayNameFor(model => model.CompanyLogo)</dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.CompanyLogo))
            {
                <img src="@Url.Content(Model.CompanyLogo)" alt="Company Logo" style="max-width: 150px; border-radius: 8px;" />
            }
            else
            {
                <span>No logo available</span>
            }
        </dd>

        <dt>@Html.DisplayNameFor(model => model.Job_Details.JobTitle)</dt>
        <dd>@Html.DisplayFor(model => model.Job_Details.JobTitle)</dd>
    </dl>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CompanyID }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</p>
