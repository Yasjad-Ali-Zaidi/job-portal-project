@model DataBaseLayer.Job_Detail

@{
    ViewBag.Title = "Edit";
}

<h2 class="text-2xl font-semibold text-gray-800">Edit Job</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="space-y-6 pb-6 border-b border-gray-200">
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Job Title</label>
            @Html.TextBoxFor(model => model.JobTitle, new { @class = "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", required = "required" })
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Job Category</label>
                @Html.DropDownListFor(model => model.JobCategory, new SelectList(new[] { "Technology", "Marketing", "Finance", "Design" }), "Select Category", new { @class = "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", required = "required" })
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Job Type</label>
                @Html.DropDownListFor(model => model.Worktype, new SelectList(new[] { "Full Time", "Part Time", "Contract", "Internship" }), "Select Type", new { @class = "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", required = "required" })
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Location</label>
                @Html.TextBoxFor(model => model.Location, new { @class = "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", required = "required" })
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Work Type</label>
                @Html.DropDownList("WorkType", new SelectList(new[] { "On-site", "Remote", "Hybrid" }), "Select Work Type", new { @class = "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", required = "required" })
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Salary Range (Annual)</label>
                <div class="flex space-x-4">
                    @Html.TextBoxFor(model => model.SalaryMin, new { @class = "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder = "Min", type = "number" })
                    @Html.TextBoxFor(model => model.SalaryMax, new { @class = "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder = "Max", type = "number" })
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Experience Level</label>
                @Html.DropDownListFor(model => model.ExperienceLevel, new SelectList(new[] { "Entry Level", "Mid Level", "Senior Level", "Executive" }), "Select Level", new { @class = "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", required = "required" })
            </div>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Job Description</label>
            @Html.TextAreaFor(model => model.Jobdescripton, new { @class = "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", rows = "6", required = "required" })
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Requirements</label>
            @Html.TextAreaFor(model => model.Reqirements, new { @class = "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", rows = "4", required = "required" })
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Benefits</label>
            @Html.TextAreaFor(model => model.Benefits, new { @class = "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", rows = "4" })
        </div>

        <div class="mt-6">
            <button type="submit" class="px-6 py-2 bg-blue-500 text-white font-medium rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">Save</button>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "ml-4 text-blue-500 hover:underline" })
        </div>
    </div>
}