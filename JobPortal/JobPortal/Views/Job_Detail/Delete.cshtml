@model DataBaseLayer.Company_Information

@{
    ViewBag.Title = Model != null && !string.IsNullOrEmpty(Model.CompanyName) ? "Details - " + Model.CompanyName : "Company Details";
}

<div class="max-w-4xl mx-auto p-6">
    <div class="bg-white rounded-lg shadow-sm p-8">
        <h2 class="text-2xl font-semibold text-gray-800 mb-6">@ViewBag.Title</h2>

        @if (Model != null)
        {
            <div>
                <h4 class="text-lg font-medium text-gray-700 mb-4">Company Information</h4>
                <hr class="mb-4" />
                <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <dt class="font-semibold text-gray-700">@Html.DisplayNameFor(model => model.CompanyName)</dt>
                        <dd class="text-gray-800">@Html.DisplayFor(model => model.CompanyName)</dd>
                    </div>
                    <div>
                        <dt class="font-semibold text-gray-700">@Html.DisplayNameFor(model => model.CompanyWebsite)</dt>
                        <dd>
                            @if (!string.IsNullOrEmpty(Model.CompanyWebsite))
                            {
                                <a href="@Model.CompanyWebsite" target="_blank" class="text-blue-500 hover:underline">@Model.CompanyWebsite</a>
                            }
                            else
                            {
                                <span class="text-gray-500">N/A</span>
                            }
                        </dd>
                    </div>
                    <div>
                        <dt class="font-semibold text-gray-700">@Html.DisplayNameFor(model => model.CompanyLogo)</dt>
                        <dd>
                            @if (!string.IsNullOrEmpty(Model.CompanyLogo))
                            {
                                <img src="@Url.Content(Model.CompanyLogo)" alt="Company Logo" class="max-w-[150px] rounded-lg border" />
                            }
                            else
                            {
                                <span class="text-gray-500">No logo available</span>
                            }
                        </dd>
                    </div>
                </dl>
            </div>

            <!-- Job Details -->
            @if (Model.Job_Details != null)
            {
                <div class="mt-8">
                    <h4 class="text-lg font-medium text-gray-700 mb-4">Job Details</h4>
                    <hr class="mb-4" />
                    <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <dt class="font-semibold text-gray-700">@Html.DisplayNameFor(model => model.Job_Details.JobTitle)</dt>
                            <dd class="text-gray-800">@Html.DisplayFor(model => model.Job_Details.JobTitle)</dd>
                        </div>
                        <div>
                            <dt class="font-semibold text-gray-700">@Html.DisplayNameFor(model => model.Job_Details.JobCategory)</dt>
                            <dd class="text-gray-800">@Html.DisplayFor(model => model.Job_Details.JobCategory)</dd>
                        </div>
                        <div>
                            <dt class="font-semibold text-gray-700">@Html.DisplayNameFor(model => model.Job_Details.Worktype)</dt>
                            <dd class="text-gray-800">@Html.DisplayFor(model => model.Job_Details.Worktype)</dd>
                        </div>
                        <div>
                            <dt class="font-semibold text-gray-700">@Html.DisplayNameFor(model => model.Job_Details.Location)</dt>
                            <dd class="text-gray-800">@Html.DisplayFor(model => model.Job_Details.Location)</dd>
                        </div>
                        <div>
                            <dt class="font-semibold text-gray-700">Salary Range</dt>
                            <dd class="text-gray-800">@Model.Job_Details.SalaryMin - @Model.Job_Details.SalaryMax</dd>
                        </div>
                        <div>
                            <dt class="font-semibold text-gray-700">Experience Level</dt>
                            <dd class="text-gray-800">@Html.DisplayFor(model => model.Job_Details.ExperienceLevel)</dd>
                        </div>
                        <div class="col-span-2">
                            <dt class="font-semibold text-gray-700">Job Description</dt>
                            <dd class="text-gray-800">@Html.DisplayFor(model => model.Job_Details.Jobdescripton)</dd>
                        </div>
                        <div class="col-span-2">
                            <dt class="font-semibold text-gray-700">Requirements</dt>
                            <dd class="text-gray-800">@Html.DisplayFor(model => model.Job_Details.Reqirements)</dd>
                        </div>
                        <div class="col-span-2">
                            <dt class="font-semibold text-gray-700">Benefits</dt>
                            <dd class="text-gray-800">@Html.DisplayFor(model => model.Job_Details.Benefits)</dd>
                        </div>
                    </dl>
                </div>
            }
            else
            {
                <p class="text-red-500 mt-4">No job details available.</p>
            }

            <div class="flex justify-end pt-6">
                @Html.ActionLink("Edit", "Edit", new { id = Model.CompanyID }, new { @class = "px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200" })
                @Html.ActionLink("Back to List", "Index", null, new { @class = "ml-4 px-6 py-3 bg-gray-500 text-white font-medium rounded-lg hover:bg-gray-600 transition-colors duration-200" })
            </div>
        }
        else
        {
            <p class="text-danger">Error: No company information found.</p>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        }
    </div>
</div>