@model DataBaseLayer.Job_Detail

@{
    ViewBag.Title = "Delete";
}

<div class="max-w-3xl mx-auto p-6">
    <div class="bg-white rounded-lg shadow-sm p-8">
        <!-- Title -->
        <h2 class="text-2xl font-semibold text-gray-800 mb-6">Delete Job Posting</h2>

        @Html.ValidationSummary(true, "", new { @class = "text-red-500 mb-4" })

        <!-- Job Title -->
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Job Title</label>
            <p class="w-full px-4 py-2 border rounded-lg bg-gray-100 text-gray-700">@Model.JobTitle</p>
        </div>

        <!-- Job Category -->
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Job Category</label>
            <p class="w-full px-4 py-2 border rounded-lg bg-gray-100 text-gray-700">@Model.JobCategory</p>
        </div>

        <!-- Job Type -->
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Job Type</label>
            <p class="w-full px-4 py-2 border rounded-lg bg-gray-100 text-gray-700">@Model.Worktype</p>
        </div>

        <!-- Location -->
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Location</label>
            <p class="w-full px-4 py-2 border rounded-lg bg-gray-100 text-gray-700">@Model.Location</p>
        </div>

        <!-- Salary Range -->
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Salary Range (Annual)</label>
            <p class="w-full px-4 py-2 border rounded-lg bg-gray-100 text-gray-700">@Model.SalaryMin - @Model.SalaryMax</p>
        </div>

        <!-- Experience Level -->
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Experience Level</label>
            <p class="w-full px-4 py-2 border rounded-lg bg-gray-100 text-gray-700">@Model.ExperienceLevel</p>
        </div>

        <!-- Job Description -->
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Job Description</label>
            <p class="w-full px-4 py-2 border rounded-lg bg-gray-100 text-gray-700">@Model.Jobdescripton</p>
        </div>

        <!-- Requirements -->
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Requirements</label>
            <p class="w-full px-4 py-2 border rounded-lg bg-gray-100 text-gray-700">@Model.Reqirements</p>
        </div>

        <!-- Benefits -->
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Benefits</label>
            <p class="w-full px-4 py-2 border rounded-lg bg-gray-100 text-gray-700">@Model.Benefits</p>
        </div>

        <!-- Confirmation -->
        <div class="mb-6 text-center">
            <p class="text-lg text-red-500 font-semibold">Are you sure you want to delete this job posting?</p>
        </div>

        <!-- Form to delete -->
        @using (Html.BeginForm("Delete", "Job", new { id = Model.JobId }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="flex justify-between">
                <button type="submit" class="px-6 py-3 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors duration-200">
                    Delete Job
                </button>

                <a href="@Url.Action("Index", "Job")" class="px-6 py-3 bg-gray-300 text-gray-800 font-medium rounded-lg hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors duration-200">
                    Cancel
                </a>
            </div>
        }
    </div>
</div>
