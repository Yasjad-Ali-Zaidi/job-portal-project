@model DataBaseLayer.Job_Detail

@{
    ViewBag.Title = "Details";
}

<h2 class="text-3xl font-semibold text-gray-800 mb-6">Job Details</h2>

<div class="space-y-6">
    <!-- Company ID -->
    <div>
        <strong>@Html.DisplayNameFor(model => model.CompanyID):</strong>
        @Html.DisplayFor(model => model.CompanyID)
    </div>

    <!-- Job Title -->
    <div>
        <strong>@Html.DisplayNameFor(model => model.JobTitle):</strong>
        @Html.DisplayFor(model => model.JobTitle)
    </div>

    <!-- Job Category -->
    <div>
        <strong>@Html.DisplayNameFor(model => model.JobCategory):</strong>
        @Html.DisplayFor(model => model.JobCategory)
    </div>

    <!-- Location -->
    <div>
        <strong>@Html.DisplayNameFor(model => model.Location):</strong>
        @Html.DisplayFor(model => model.Location)
    </div>

    <!-- Work Type -->
    <div>
        <strong>@Html.DisplayNameFor(model => model.Worktype):</strong>
        @Html.DisplayFor(model => model.Worktype)
    </div>

    <!-- Salary Range -->
    <div>
        <strong>@Html.DisplayNameFor(model => model.SalaryMin):</strong>
        @Html.DisplayFor(model => model.SalaryMin) - @Html.DisplayFor(model => model.SalaryMax)
    </div>

    <!-- Experience Level -->
    <div>
        <strong>@Html.DisplayNameFor(model => model.ExperienceLevel):</strong>
        @Html.DisplayFor(model => model.ExperienceLevel)
    </div>

    <!-- Job Description -->
    <div>
        <strong>@Html.DisplayNameFor(model => model.Jobdescripton):</strong>
        @Html.DisplayFor(model => model.Jobdescripton)
    </div>

    <!-- Requirements -->
    <div>
        <strong>@Html.DisplayNameFor(model => model.Reqirements):</strong>
        @Html.DisplayFor(model => model.Reqirements)
    </div>

    <!-- Benefits -->
    <div>
        <strong>@Html.DisplayNameFor(model => model.Benefits):</strong>
        @Html.DisplayFor(model => model.Benefits)
    </div>

    <div class="mt-4">
        @Html.ActionLink("Edit", "Edit", new { id = Model.JobID }) |
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
